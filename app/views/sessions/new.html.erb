<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>

<table>
<tr>
	<td><b><font color=#0000CC><%=label_tag :email %></td>
	<td><%= text_field_tag :email, params[:email]%></tr></font></b>

	<td><b><font color=#0000CC><%=label_tag :password %></td>
	<td><%= password_field_tag :password %> </tr></font></b>

</tr>
</table>
 
 <div class="actions">
    	<%= f.submit "Sign in" %>
  </div>
  
<% end %>