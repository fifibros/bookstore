<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<h1>Books for Sale</h1>
<% if !@books.empty? %>
	<% @books.each do |book| %>	
		<%= image_tag(book.image, :size => "100x100") %>
		<h3><%= book.title %></h3>
			Book ID: <%= book.book_id %><br>
		    Author: <%= book.author %><br>
			Category: <%= book.category %><br>
			Quantity in Stock: <%= book.quantity %><br>
		Price: <b>
			<span class="price"><%= number_to_euro(book.price) %></span></b>
			<%= button_to 'Add to Cart', lineitems_path(book_id: book), remote: true %>
		<br>
		<br>
	<% end %>

<% else %>
	<p>There are no books for sale.</p>
<% end %>