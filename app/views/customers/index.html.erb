<h1>Customers</h1>

<table>
  <tr>
    <th>Customer ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
	<td><%= customer.customer_id %></td>
    <td><%= customer.name %></td>
    <td><%= customer.email %></td>
    <td><%= customer.address %></td>
    <td><%= button_to 'View', customer, :method => :get %></td>
    <td><%= button_to 'Edit', edit_customer_path(customer), :method => :get %></td>
    <td><%= button_to 'Delete', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

