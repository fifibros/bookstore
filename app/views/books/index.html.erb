<h1>Bookstore</h1>

<table>
  <tr>
    <th>Book ID</th>
	<th>Image</th>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th>Category</th>
	<th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.book_id %></td>
	<td><%= image_tag(book.image, :size => "50x50") %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= number_to_euro(book.price) %></td>
    <td><%= book.category %></td>
	<td><%= book.quantity %></td>
    <td><%= button_to 'View', book, :method => :get %></td>
    <td><%= button_to 'Edit', edit_book_path(book), :method => :get %></td>
    <td><%= button_to 'Delete', book, confirm: 'Are you sure you want to delete this book?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
