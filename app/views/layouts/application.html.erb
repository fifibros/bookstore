<!DOCTYPE html>
<html>
<head>
  <title>Bookstore</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="nav">
<ul>
	<li><%= button_to "Register", new_customer_path, :method => :get %></li>	
	<% if !signed_in? %>		
			<li><%= button_to "Login", signin_path, :method => :get %></li>
	<% else %>
			<li><%= button_to "Show Orders?", customer_orders_path, :method => :get %></li>
			<li>Signed in as <%= @current_customer.name %></li>
			<li><%= button_to "Sign Out", signout_path, :method => :get %></li>
	<%end %>
</ul>	
</div>

<div id="columns">
	<div id="side">
		<div id="cart">
			<% if @cart %>
				<%= render @cart %>
			<% end %>
		</div>
	</div>
		<div id="main">
			<%= yield %>
		</div>
</div>
</body>
</html>