<h1>Orders made</h1>

<table>
  <tr>
    <th>Customer ID</th>
	<th>Customer Name</th>
    <th>Paymethod</th>
	<th>Shipped</th>
    <th>Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.customer_id %></td>
	<td><%= order.customer.name %></td>
    <td><%= order.paymethod %></td>
	<td><%= order.shipping %></td>
    <td><%= number_to_euro(order.lineitems.inject(0) { |sum, p| sum + p.book.price })%></td>
    <td><%= button_to 'View', order, :method => :get %></td>
    <td><%= button_to 'Delete', order, confirm: 'Are you sure you want to delete this order?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>